{
  "extends": "../../tslint.json",
  "rules": {
    "directive-selector": [true, "attribute", "previewUi", "camelCase"],
    "component-selector": [true, "element", "preview-ui", "kebab-case"]
  },
  "linterOptions": {
    "exclude": ["!**/*"]
  },
  "angularCompilerOptions": {
    "strictInjectionParameters": true,
    "strictInputAccessModifiers": true,
    "strictTemplates": true
  }
}
